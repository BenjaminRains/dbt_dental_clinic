# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE (copy to .env)
# =============================================================================
# Used by: DOCKER COMPOSE (variable substitution in docker-compose.yml),
#          AIRFLOW (webserver, scheduler), POSTGRES, MYSQL, DBT containers
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!
#
# Security Note: This project handles PHI (Protected Health Information)
# All credentials must be kept secure per HIPAA requirements
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database (Target/Warehouse)
# -----------------------------------------------------------------------------
POSTGRES_USER=your_postgres_username
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DATABASE=opendental_analytics
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# MySQL Database (OpenDental Source)
# -----------------------------------------------------------------------------
MYSQL_ROOT_USER=root
MYSQL_ROOT_PASSWORD=your_secure_mysql_password
MYSQL_DATABASE=opendental

# -----------------------------------------------------------------------------
# OpenDental Source Connection (for ETL)
# -----------------------------------------------------------------------------
OPENDENTAL_SOURCE_USER=your_opendental_db_user
OPENDENTAL_SOURCE_PW=your_opendental_db_password
OPENDENTAL_SOURCE_HOST=your_opendental_host_or_ip
OPENDENTAL_SOURCE_PORT=3306
OPENDENTAL_SOURCE_DB=opendental

# -----------------------------------------------------------------------------
# Airflow Configuration
# -----------------------------------------------------------------------------
# Generate a Fernet key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=your_fernet_key_here

# REQUIRED: Airflow Admin Credentials
# SECURITY: Never use 'admin' as password in production!
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
AIRFLOW_ADMIN_EMAIL=your_email@example.com

# -----------------------------------------------------------------------------
# Email/SMTP Configuration (for monitoring alerts)
# -----------------------------------------------------------------------------
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_app_password
ALERT_RECIPIENTS=admin@example.com,analyst@example.com

# -----------------------------------------------------------------------------
# Optional: Additional Security Settings
# -----------------------------------------------------------------------------
# DBT_CLOUD_API_KEY=your_dbt_cloud_key_if_using_cloud
# AWS_ACCESS_KEY_ID=your_aws_key_if_deploying_to_cloud
# AWS_SECRET_ACCESS_KEY=your_aws_secret_if_deploying_to_cloud

